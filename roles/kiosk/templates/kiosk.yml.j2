{% if persistent_home %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ base_name }}-{{ item }}
  namespace: "{{ namespace }}"
  labels:
    name: {{ base_name }}
    count: "{{ item }}"
    component: kiosk-operand
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ persistent_home_size }}
{% endif %}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: "{{ namespace }}"
  name: {{ base_name }}-{{ item }}
  labels:
    name: {{ base_name }}
    count: "{{ item }}"
    component: kiosk-operand
spec:
  selector:
    matchLabels:
      component: kiosk-operand
      name: {{ base_name }}
      count: "{{ item }}"
  replicas: 1
  template:
    metadata:
      labels:
        component: kiosk-operand
        name: {{ base_name }}
        count: "{{ item }}"
      annotations:
    spec:
      restartPolicy: Always
      containers:
        - name: desktop
          image: {{ registry }}/{{ project }}/{{ distribution }}{{ suffix }}:{{ distribution_release }}
          imagePullPolicy: "{{ image_pull_policy }}"
{% if persistent_home %}
          volumeMounts:
            - name: kiosk
              mountPath: /home
{% endif %}
          env:
          - name: VNCPASS
            value: "{{ passwd }}"
          - name: DE
            value: "{{ desktop }}"
          - name: DESHELL
            value: "{{ shell }}"
          - name: RESOLUTION
            value: "{{ resolution }}"
{% if additional_playbook_url != '' %}
          - name: ADDITIONAL_PLAYBOOK_URL
            value: "{{ additional_playbook_url }}"
{% endif %}
           - name: RESOLUTION
            value: "{{ resolution }}"
          ports:
          - containerPort: 5901
            protocol: TCP
        - name: client
          image: {{ registry }}/{{ project }}/{{ kiosk_client }}:{{ kiosk_client_tag }}
          imagePullPolicy: "{{ image_pull_policy }}"
          env:
          - name: VNCPASS
            value: "{{ passwd }}"
          - name: DE
            value: "{{ desktop }}"
          - name: DESHELL
            value: "{{ shell }}"
          - name: RESOLUTION
            value: "{{ resolution }}"
          ports:
          - containerPort: 6080
            protocol: TCP
{% if persistent_home %}
      volumes:
        - name: kiosk
          persistentVolumeClaim:
            claimName: {{ base_name }}-{{ item }}
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ base_name }}-{{ item }}
  namespace: "{{ namespace }}"
  labels:
    name: {{ base_name }}
    count: "{{ item }}"
    component: kiosk-operand
spec:
  ports:
    - name: port-6080
      port: 6080
      targetPort: 6080
      protocol: TCP
  selector:
    component: kiosk-operand
    name: {{ base_name }}
    count: "{{ item }}"
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: {{ base_name }}-{{ item }}
  namespace: "{{ namespace }}"
  labels:
    name: {{ base_name }}
    count: "{{ item }}"
    component: kiosk-operand
spec:
  to:
    kind: Service
    name: {{ base_name }}-{{ item }}
  port:
    targetPort: port-6080
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
